<div class="container">
    <br>

  {{ui-information-component errorMessage=registrationError}}

    <form  {{action 'registerNewUser' on="submit"}} >

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <label >Email:</label>
          {{input type="email" class="form-control" value=email placeholder="Email" }}
        </div>

        <div class="clearfix visible-lg visible-md"></div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <label >Password:</label>
          {{input type="password" class="form-control" value=password placeholder="Password" pattern=".{6,}"}}
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <label >Password confirmation:</label>
          {{input type="password" class="form-control" value=passwordConfirmation placeholder="Password confirmation"  pattern=".{6,}"}}
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <label >First name:</label>
          {{input type="text" class="form-control" value=firstName placeholder="First name" maxlength=20 }}
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12" >
            <label >Last name:</label>
          {{input type="text" class="form-control" value=lastName placeholder="Last name"  maxlength=20 }}
        </div><br>

        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12" >
            <label >Street name:</label>
          {{input  type="text" class="form-control" value=streetName placeholder="Street name" }}
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <label >City:</label>
          {{input type="text" class="form-control" value=city placeholder="City" }}
        </div>

        <div class="form-group col-md-6">
            <label >Country:</label>
          {{input  type="text" class="form-control" value=country placeholder="Country" }}
        </div>

        <div class="form-group col-md-8">
            <label >Phone:</label>
          {{input type="tel" class="form-control" value=phone placeholder="Phone" pattern=".{6,}"}}
        </div>

        <div class="form-group col-md-8">
            <label>Gender:</label>
            <input type="radio" name="gender" value="Male" checked> Male
            <input type="radio" name="gender" value="Female"> Female
        </div>

        <div class="form-group col-md-12">
            <label for="day">Date of Birth:</label> <br>
            <div class="col-lg-3">
                <label for="day">Day:</label>{{input  type="text" class="form-control" value=day placeholder="DD" maxlength="2"}}
            </div>

            <div class="col-lg-3">
                <label for="day">Month:</label>{{input  type="text" class="form-control" value=month placeholder="MM" maxlength="2"}}
            </div>

            <div class="col-lg-3">
                <label for="day">Year:</label>{{input  type="text" class="form-control" value=year placeholder="YYYY" maxlength="5"}}
            </div>
        </div>
        <div class="col-lg-2 col-sm-2 col-md-2">
            <button type="submit" class="btn-success btn-lg" >Sign up</button>
        </div>

    </form>


</div>



{{yield}}

